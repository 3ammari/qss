<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="customer.quick.source.qss.MainMenu"
    android:id="@+id/relative_layout">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show QR"
        android:id="@+id/qrUserIDShow"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options"
        android:id="@+id/optionsButton"
        android:layout_below="@+id/qrUserIDShow"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Station"
        android:id="@+id/findStation"
        android:layout_below="@+id/optionsButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Garage"
        android:id="@+id/garageButton"
        android:layout_below="@+id/findStation"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rewards"
        android:id="@+id/rewardsButton"
        android:layout_below="@+id/garageButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
