<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:padding="4dp"
    tools:context="customer.quick.source.qss.NotificationBar"

    android:background="#0393A6">

<ExpandableListView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/expandableListView"
    android:groupIndicator="@null"

    android:layout_alignParentTop="true"
    android:layout_below="@+id/notifcationClearButton"
    >

</ExpandableListView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/clearNotificationButton"
        android:id="@+id/notifcationClearButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
         />

</RelativeLayout>
