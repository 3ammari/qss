<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:background="#ffe9e0d6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remainingDaysTV"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:text="remaining"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/daysAgoTV"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_toLeftOf="@+id/remainingDaysTV"
        android:layout_alignBaseline="@+id/remainingDaysTV"
        android:layout_margin="2dp"
        android:text="daysAgo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignBaseline="@id/remainingDaysTV"
        android:textSize="14sp"
        android:textStyle="bold"
        android:id="@+id/serviceTypeTV"
        android:layout_margin="2dp"
        android:text="Service Type"
        />

</RelativeLayout>